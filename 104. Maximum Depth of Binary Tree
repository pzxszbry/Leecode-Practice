/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode(int x) { val = x; }
 * }
 */
class Solution {
    public int maxDepth(TreeNode root) {
        if(root == null)
            return 0;
        else{
            int depth_l = maxDepth(root.left);
            int depth_r = maxDepth(root.right);
            if(depth_l > depth_r)
                return depth_l + 1;
            else
                return depth_r + 1;
        }
    }
}
